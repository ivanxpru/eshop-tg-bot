{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "semi": "error",
        "eol-last": [
            "error", 
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "spaced-comment": [
            "error", 
            "always"
        ]
    }
}
